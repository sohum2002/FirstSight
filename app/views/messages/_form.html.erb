<%= form_tag messages_path, method: :post do %>
  <div class="form-group">
    <p><strong>Subject</strong></p>
    <%= text_field_tag 'message[subject]', nil, class: 'form-control', :style => "text-align:center" %>
  </div>
 
  <div class="form-group">
    <p><strong>Message</strong></p>
    <%= text_area_tag 'message[body]', nil, cols: 3, class: 'form-control', required: true, :style => "text-align:center" %>
  </div>
 
  <div class="form-group">
    <p><strong>Recipient</strong></p>
    <%= select_tag 'recipients', recipients_options, multiple: true, class: 'form-control', :style => "text-align:center" %>
  </div>
 
  <%= submit_tag 'Send', class: "btn btn-default pull-right", :id =>"blueBG", :style => "color: white" %>
<% end %>
