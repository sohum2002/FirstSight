    <h4>Area of Interest (work or education):</h4>

      <%= f.check_box(:field) %>
      <%= f.label(:field, "Sciences") %>
      <br>
      <%= f.check_box(:field) %>
      <%= f.label(:field, "Mathematics/Physics") %>
      <br>
      <%= f.check_box(:field) %>
      <%= f.label(:field, "Computer Science/Technology") %>
      <br>
      <%= f.check_box(:field) %>
      <%= f.label(:field, "Arts (Fashion, Music, Media)") %>
  </div>
  <br>
  <br>
  <div class="field">
    <h4>Looking for:</h4>
    <%= f.radio_button(:interest, "Man") %>
    <%= f.label(:man, "Man") %>
    <br>
    <%= f.radio_button(:interest, "Woman") %>
    <%= f.label(:woman, "Woman") %>
    <br>
    <%= f.radio_button(:interest, "Either Man or Woman") %>
    <%= f.label(:either, "Either Man or Woman") %>
    <br>
  </div>
  <br>
  <div class="field">
    <h4>How much do you care about physical attributes?</h4>
    <%= f.radio_button(:physical, "Strongly") %>
    <%= f.label(:strongly, "Strongly") %>
